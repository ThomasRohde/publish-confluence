// tsconfig.json
{
  "compilerOptions": {
      "target": "ES2020", // Target modern Node.js versions
      "module": "ESNext", // Use modern ES modules
      "lib": ["ES2020", "DOM"], // Include DOM for FormData/Blob if needed, ES2020 for Node
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node", // Important for Node.js
      "declaration": true, // Generate .d.ts files
      "sourceMap": true, // Generate source maps
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"], // Only compile files in src
    "exclude": ["node_modules", "dist", "vite.config.ts"] // Exclude build output and config
  }