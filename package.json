{
    "name": "publish-confluence",
    "version": "1.2.0",
    "description": "CLI tool to publish JavaScript builds and HTML content to Confluence",
    "type": "module",
    "bin": {
        "publish-confluence": "./dist/cli.js"
    },
    "module": "./dist/publish-confluence.es.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/publish-confluence.es.js",
            "types": "./dist/types/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite build --watch && npm run copy-templates",
        "build": "tsc --noEmit && vite build && npm run bundle-template-scripts && npm run copy-templates",
        "bundle-template-scripts": "node bundle-template-scripts.js",
        "copy-templates": "node copy-templates.js",
        "postbuild": "npm run copy-templates",
        "prepublishOnly": "npm run build",
        "start": "node ./dist/cli.js",
        "publish-npm": "npm publish",
        "publish-npm-beta": "npm publish --tag beta"
    },
    "keywords": [
        "confluence",
        "atlassian",
        "rest",
        "api",
        "typescript",
        "node"
    ],
    "author": "Thomas Klok Rohde <thomas@rohde.name>",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.7.7",
        "chalk": "^5.3.0",
        "commander": "^13.1.0",
        "dotenv": "^16.5.0",
        "form-data": "^4.0.0",
        "globby": "^14.1.0",
        "handlebars": "^4.7.8",
        "hast-util-to-html": "^9.0.5",
        "hastscript": "^9.0.1",
        "rehype-stringify": "^10.0.1",
        "remark-parse": "^11.0.0",
        "remark-rehype": "^11.1.2",
        "unified": "^11.0.5",
        "unist-util-visit": "^5.0.0",
        "vfile": "^6.0.3",
        "xmldom": "^0.6.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/handlebars": "^4.1.0",
        "@types/node": "^22.7.4",
        "@types/xmldom": "^0.1.34",
        "esbuild": "^0.19.12",
        "rollup": "^4.9.6",
        "tsx": "^4.7.1",
        "typescript": "^5.6.2",
        "vite": "^6.3.0",
        "vite-plugin-dts": "^4.2.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
