// TypeScript code example
interface User {
name: string;
age: number;
isAdmin: boolean;
}

class UserManager {
private readonly users: User[] = [];

public addUser(user: User): void {
this.users.push(user);
console.log(`Added user: ${user.name}`);
}

public getAdmins(): User[] {
return this.users.filter(user => user.isAdmin);
}
}
